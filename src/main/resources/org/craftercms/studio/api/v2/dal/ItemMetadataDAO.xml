<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.craftercms.studio.api.v2.dal.ItemMetadataDAO">
    <resultMap id="SandboxItemMap" type="org.craftercms.studio.api.v2.dal.SandboxItem">
        <id property="id" column="id"/>
        <result property="label" column="label" />
        <result property="contentTypeId" column="content_type_id" />
        <result property="path" column="path"/>
        <result property="previewUrl" column="preview_url"/>
        <result property="systemType" column="system_type" />
        <result property="mimeType" column="mime_type" />
        <result property="state" column="state" />
        <result property="lockOwner" column="lock_owner" />
        <result property="disabledAsInt" column="disabled" />
        <result property="localeCode" column="locale_code" />
        <result property="translationSourceId" column="translation_source_id" />
        <result property="creator" column="creator" />
        <result property="createdDate" column="created_date" />
        <result property="modifier" column="modifier"/>
        <result property="lastModifiedDate" column="last_modified_date" />
        <result property="commitId" column="commit_id" />
        <result property="sizeInBytes" column="size_in_bytes" />
        <result property="itemId" column="item_id" />
        <result property="parentId" column="parent_id" />
    </resultMap>

    <select id="getChildrenByPath" resultMap="SandboxItemMap">
        select * from item_metadata where site = #{siteId} and path = #{parentPath}
        union
        select * from item_metadata where site = #{siteId} and path = #{ldPath}
        union
        (select * from item_metadata where site = #{siteId} and path RLIKE ('${path}/[^/]+/index\.xml|${path}/(?!index\.xml)[^/]+$') and path not like '%/${ldName}' limit #{offset},#{limit})
    </select>

    <select id="getChildrenByPathTotal" resultType="Integer">
        select count(1) from item_metadata where site = #{siteId} and path RLIKE ('${path}/[^/]+/index\.xml|${path}/(?!index\.xml)[^/]+$') and path not like '%/${ldName}'
    </select>

    <select id="getChildrenById" resultType="org.craftercms.studio.api.v2.dal.SandboxItem">
        select * from item_metadata where site = #{siteId} and item_id = #{parentId}
        union
        select * from item_metadata where site = #{siteId} and parent_id = #{parentId} and path like '%/${ldName}'
        union
        select * from item_metadata where site = #{siteId} and parent_id = #{parentId} and path not like '%/${ldName}'
    </select>

    <select id="getChildrenByIdTotal" resultType="Integer">
        select count(1) from item_metadata where site = #{siteId} and parent_id = #{parentId}
        and path not like '%/${ldName}'
    </select>

    <select id="updateParentIdForSite" >
        call update_parent_id(#{siteId})
    </select>
</mapper>