<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.craftercms.studio.api.v2.dal.PublishingQueueDAO">
    <resultMap id="PublishingQueuePackageMap" type="org.craftercms.studio.api.v2.dal.PublishingQueuePackage">
        <id property="id" column="id" />
        <result property="siteId" column="site_id"/>
        <result property="site" column="site_name" />
        <result property="status" column="status" />
        <result property="operation" column="operation" />
        <result property="publishingTarget" column="publishing_target" />
        <result property="schedule" column="schedule" />
        <result property="initiatorId" column="initiator" />
        <result property="initiator" column="initiator_username" />
        <result property="publishingComment" column="publishing_comment" />
        <result property="completedOn" column="completed_on" />
        <result property="numberOfRetries" column="number_of_retries" />
    </resultMap>

    <insert id="createPublishingQueuePackage" >
        INSERT INTO publishing_queue (workflow_package_id, site_id, status, operation, publishing_target, schedule,
                                      initiator, publishing_comment)
        VALUES (#{workflowPackageId}, #{siteId}, #{status}, #{operation}, #{publishingTarget}, #{schedule},
                #{initiatorId}, #{publishingComment})
    </insert>


</mapper>