<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.craftercms.studio.api.v2.dal.publish.ItemTargetDAO">
    <resultMap id="ItemTargetMap" type="org.craftercms.studio.api.v2.dal.publish.ItemTarget">
        <result property="itemId" column="item_id"/>
        <result property="target" column="target"/>
        <result property="oldPath" column="old_path"/>
    </resultMap>

    <select id="getByItemPath" resultMap="ItemTargetMap">
        SELECT it.*
        FROM item_target it
        INNER JOIN item i ON it.item_id = i.id
        WHERE i.site_id = #{siteId}
        AND i.path = #{path}
    </select>

    <delete id="clearForItem">
        DELETE FROM item_target
        WHERE item_id = #{itemId}
    </delete>

    <delete id="clearForItemAndTarget">
        DELETE FROM item_target
        WHERE item_id = #{itemId}
        AND target = #{target}
    </delete>

    <delete id="clearForSiteAndTarget">
        DELETE item_target FROM item_target INNER JOIN item
        WHERE item.id = item_target.item_id
        AND site_id = #{siteId}
        AND item_target.target = #{target}
    </delete>

    <delete id="clearForItemIds">
        DELETE FROM item_target
        WHERE item_id IN
        <foreach collection="itemIds" item="itemId" open="(" close=")" separator=",">
            #{itemId}
        </foreach>
        AND target = #{target}
    </delete>
</mapper>
