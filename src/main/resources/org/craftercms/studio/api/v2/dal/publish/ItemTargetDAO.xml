<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.craftercms.studio.api.v2.dal.publish.ItemTargetDAO">
    <resultMap id="ItemTargetMap" type="org.craftercms.studio.api.v2.dal.publish.ItemTarget" autoMapping="true">
    </resultMap>

    <select id="getByItemPath" resultMap="ItemTargetMap">
        SELECT it.*
        FROM item_target it
        INNER JOIN item i ON it.item_id = i.id
        WHERE i.site_id = #{siteId}
        AND i.path = #{path}
    </select>

    <update id="updateForCompletePackage">
        UPDATE item_target it
        SET it.old_path = null,
            it.published_commit_id = #{commitId},
            it.last_published_on = #{timestamp}
        WHERE it.item_id IN <include refid="org.craftercms.studio.api.v2.dal.publish.PublishDAO.getSuccessfulItemIdsForPackage"/>
        AND it.target = #{target}
    </update>

    <insert id="insertForInitialPublish">
        INSERT INTO item_target
        (item_id, target, old_path, published_commit_id, last_published_on)
        SELECT i.id, t.target, null, #{commitId}, #{timestamp}
        FROM item i,
        (
            <foreach collection="targets" item="target" index="index" separator="UNION" >
                (SELECT #{target} target)
            </foreach>
        ) AS t
        WHERE i.site_id = #{siteId}
    </insert>
</mapper>
