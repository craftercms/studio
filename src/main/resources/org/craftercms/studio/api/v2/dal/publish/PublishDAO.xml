<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.craftercms.studio.api.v2.dal.publish.PublishDAO">
    <resultMap id="PublishPackageMap" type="org.craftercms.studio.api.v2.dal.publish.PublishPackage">
        <id property="id" column="id"/>
        <result property="siteId" column="site_id"/>
    </resultMap>

    <insert id="insertPackage" parameterType="org.craftercms.studio.api.v2.dal.publish.PublishPackage"
            useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO publish_package
        (site_id,
        target,
        schedule,
        approval_state,
        package_state,
        submitter_id,
        submitter_comment,
        publish_all,
        commit_id)
        VALUES
        (#{siteId},
        #{target},
        #{schedule},
        #{approvalState},
        'READY',
        #{submitterId},
        #{comment},
        #{publishAll},
        #{commitId});
    </insert>

    <insert id="insertItems">
        INSERT INTO publish_item
        (package_id,
        path,
        live_old_path,
        staging_old_path,
        action,
        user_requested,
        state)
        VALUES
        <foreach collection="items" item="item" index="index" separator="," >
            (#{packageId},
            #{item.path},
            #{item.liveOldPath},
            #{item.stagingOldPath},
            #{item.action},
            #{item.userRequested},
            'PENDING')
        </foreach>
    </insert>
</mapper>
