<contextNav>
  <contexts>
    <context>
      <groups>
        <group>
          <menuItems>
            <menuItem>
              <modulehooks>

                <!-- Dashboard -->
                <modulehook>
                  <name>dashboard</name>
                  <params>
                    <label>Dashboard</label>
                    <path>/site-dashboard</path>
                  </params>
                </modulehook>

                <!-- Site Config -->
                <modulehook>
                  <name>site-config</name>
                  <divider>true</divider>
                  <params>
                    <roles>
                      <role>admin</role>
                      <role>developer</role>
                    </roles>
                    <label>Site Config</label>
                    <path>/site-config</path>
                  </params>
                </modulehook>

                <!-- Path Navigator: Pages -->
                <modulehook>
                  <render>PagesWidget</render>
                  <props>
                    <label>Pages</label>
                    <icon>
                        <baseClass>fa fa-file-text-o</baseClass>
                    </icon>
                    <rootPath>/site/website</rootPath>
                    <locale>en</locale>
                  </props>
                  <container>
                    <style>
                      <padding-left>9px</padding-left>
                    </style>
                    <class>next-pages-widget</class>
                  </container>
                </modulehook>

                <!-- Path Navigator: Components -->
                <modulehook>
                  <render>PagesWidget</render>
                  <props>
                    <label>Components</label>
                    <icon>
                        <baseClass>fa fa-puzzle-piece</baseClass>
                    </icon>
                    <rootPath>/site/components</rootPath>
                    <locale>en</locale>
                  </props>
                  <container>
                    <style>
                      <padding-left>9px</padding-left>
                    </style>
                    <class>next-pages-widget</class>
                  </container>
                </modulehook>

                <!-- Path Navigator: Taxonomy -->
                <modulehook>
                  <render>PagesWidget</render>
                  <props>
                    <label>Taxonomy</label>
                    <icon>
                        <baseClass>fa fa-tags</baseClass>
                    </icon>
                    <rootPath>/site/taxonomy</rootPath>
                    <locale>en</locale>
                  </props>
                  <container>
                    <style>
                      <padding-left>9px</padding-left>
                    </style>
                    <class>next-pages-widget</class>
                  </container>
                </modulehook>

                <!-- Path Navigator: Static Assets -->
                <modulehook>
                  <render>PagesWidget</render>
                  <props>
                    <label>Static Assets</label>
                    <icon>
                        <baseClass>fa fa-image</baseClass>
                    </icon>
                    <rootPath>/static-assets</rootPath>
