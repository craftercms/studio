        </api>
    </profile>

    <!-- Security properties -->
    <security>
        <saml>
            <token>SOME_RANDOM_TOKEN</token>
            <groups>
                <group>
                    <name>MEMBER</name>
                    <role>memberUser</role>
                </group>
            </groups>
            <attributes>
